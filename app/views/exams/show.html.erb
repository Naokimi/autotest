<%= link_to exams_path, class: "btn btn-primary mt-4" do%>
  <i class="fas fa-arrow-left px-3"></i>
<% end %>

<div class="container mt-3">
  <div class="row">
    <div style="background-color:rgba(0,0,0,0.01)" class="">
      <div class="d-flex justify-content-between px-4">
        <h4>Exam id:- <%= @exam.id %></h4>
        <h4><em>Submissions id:-  </em><%= @exam.submissions.count %></h4>
      </div>
      <div class="col-8">
        <%= cl_image_tag @exam.image, width: 540, crop: :fill %>
      </div>
    </div>
    <div class="col-4 card" style="background-color: white;margin: 36px 56px;">
      <div class="row ">
        <div class="col-12 my-1">
          <%= simple_form_for [@exam, @submission] do |f| %>
            <%= f.input :image %>
            <%= f.input :image_cache, as: :hidden %>
            <%= f.submit "Upload answer sheet" %>
          <% end %>
        </div>
         <div class="col-12 my-5 d-flex justify-content-between">
          <%= link_to "Delete this exam", exam_path(@exam), method: "delete", class: "btn btn-danger" %>
        <!-- </div>
        <div class="col-12 my-1"> -->
          <% css_class = @exam.submissions.empty? ? "d-none" : "" %>
          <%= link_to "Submissions", exam_submissions_path(@exam), class: "btn btn-primary #{css_class}" %>
        </div>

      </div>
    </div>
  </div>
</div>

<div class="container mt-5 pt-5">
  <p>------------------------------------------------------</p>
  <p>Below is a table for debug....</p>
  <table class="table">
    <thead>
      <tr>
        <th>Question #</th>
        <th>Correct Answer</th>
        <th>origin_x</th>
        <th>origin_y</th>
        <th>width</th>
        <th>height</th>
      </tr>
    </thead>
    <% @exam.questions.order(:id).each do |question| %>
      <tr>
        <td><%= question.id %></td>
        <td><%= question.correct_answer %></td>
        <td><%= question.origin_x %></td>
        <td><%= question.origin_y %></td>
        <td><%= question.width %></td>
        <td><%= question.height %></td>
      </tr>
    <% end %>
  </table>
</div>

