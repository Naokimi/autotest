<%= simple_form_for(exam) do |f| %>
  <%= f.input :image, input_html: { id: 'upload' },  label_html: { class: 'custom-file-upload btn btn-upload px-3 py-2' }, label: "Upload an exam", required: false  %>
  <%= f.input :image_cache, as: :hidden %>
  <%= f.submit "Upload", as: :hidden, id: "submit", style: "display:none;" %>
<% end %>
